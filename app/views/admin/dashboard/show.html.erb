<%= content_tag :p, "There are no orders in the system." if @facade.no_orders? %>

<section id="pending-orders">
  <h3>Pending Orders</h3>
  <% @facade.pending_orders.each do |order| %>
    <section id="order-<%= order.id %>">
      <p>Order #<%= order.id %></p>
      <p>User: <%= link_to order.user.name, admin_user_path(order.user) %></p>
      <p>Created at: <%= order.created_at %></p>
    </section>
  <% end %>
</section>

