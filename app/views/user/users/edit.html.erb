<%= form_for current_user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.select :state, us_states, include_blank: true %>

  <%= f.label :zip %>
  <%= f.number_field :zip %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.submit 'Update Profile' %>
<% end %>
